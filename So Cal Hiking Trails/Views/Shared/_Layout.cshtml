<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - So Cal Hiking Trails</title>

	<environment include="Development">
		<link rel="stylesheet" href="~/lib/vendor.min.css" />
	</environment>
	<environment exclude="Development">
		<link rel="stylesheet" href="~/lib/vendor.min.css" />
	</environment>
	<link rel='stylesheet' href='https://js.arcgis.com/4.7/esri/css/main.css'>
</head>
<body>
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">So Cal Hiking Trails</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="navbar-collapse collapse">
			<div class="navbar-nav">
				<a class="nav-item nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
				<a class="nav-item nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
				<a class="nav-item nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
			</div>
			@await Html.PartialAsync("_LoginPartial")
		</div>
	</nav>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - So Cal Hiking Trails</p>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="~/lib/vendor.min.js"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
